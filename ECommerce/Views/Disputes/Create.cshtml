@model ECommerce.Models.Dispute

@{
    ViewData["Title"] = "Create";
}

<h2>تقديم شكوى</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Complaint" class="control-label"></label>
                <textarea asp-for="Complaint" class="form-control" rows="7"></textarea>
                <span asp-validation-for="Result" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="تقديم" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Orders" asp-action="CustomerOrders" asp-route-customerId="@ViewBag.CustomerId"></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
