@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@model ECommerce.Models.Service

@{
    ViewData["Title"] = "مقارنة خدمات";
}

    <h2>مقارنة خدمات</h2>

<div>
    
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="Search">
                    @using (Html.BeginForm("Compare", "Services", FormMethod.Post))
                    {
                        <input type="text" list="data1" name="searchName" placeholder="ابحث عن خدمة لمقارنتها" />
                        <datalist id="data1">
                            @foreach (var item in ViewBag.Services)
                            {
                                <option>@item.Name</option>
                            }
                        </datalist>

                        <i class="glyphicon glyphicon-search"></i>
                    }
                </div>
                <br />
                @if (Model == null)
                {
                    <h2>لا يوجد خدمة بهذا الاسم</h2>
                }
                else
                {
                    <table class="table table-striped table-bordered table-responsive">
                        <tr>
                            <th>
                                بائع الخدمات
                            </th>
                            <td>
                                @Model.Sprovider.CompanyName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                اسم الخدمة
                            </th>
                            <td>
                                @Model.Name
                            </td>
                        </tr>
                        <tr>
                            <th>
                                السعر
                            </th>
                            <td>
                                @Model.Price
                            </td>
                        </tr>
                        <tr>
                            <th>
                                زمن التسليم
                            </th>
                            <td>
                                @Model.ExpectedTime
                            </td>
                        </tr>
                        <tr>
                            <th>
                                صورة
                            </th>
                            <td>
                                <img src="~/uploads/service/@Model.Image" alt="@Model.Name" style="width:160px; height:160px;" class="img-thumbnail" />
                            </td>
                        </tr>
                    </table>
                }

            </div>
            <div class="col-lg-6">
                <div>
                    @using (Html.BeginForm("Compare", "Services", FormMethod.Post))
                    {
                        <input type="text" list="data2" name="searchName2" placeholder="ابحث عن خدمة لمقارنتها" />
                        <datalist id="data2">
                            @foreach (var item in ViewBag.Services)
                            {
                                <option>@item.Name</option>
                            }
                        </datalist>
                        if (Model != null)
                        {
                            <input type="text" name="searchName1" value="@Model.Name" hidden />

                        }

                        <i class="glyphicon glyphicon-search"></i>
                    }
                </div>
                <br />

            </div>
        </div>
    </div>

</div>



